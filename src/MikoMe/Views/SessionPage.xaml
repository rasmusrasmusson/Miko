<Page
    x:Class="MikoMe.Views.SessionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:MikoMe.ViewModels">

    <Page.DataContext>
        <vm:SessionViewModel/>
    </Page.DataContext>

    <Grid RowDefinitions="160,200,120,100,150">

        <!-- Top: progress / header -->
        <Grid Grid.Row="0" Background="#FAEAD1">
            <TextBlock Text="Session Header"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="Black"/>
        </Grid>

        <!-- Hanzi panel -->
        <Grid Grid.Row="1" Background="#FFD475" Padding="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="{Binding PromptBig, FallbackValue='æ¼¢å­—'}"
                           FontSize="44"
                           FontWeight="SemiBold"
                           Foreground="Black"/>
                <TextBlock x:Name="PinyinTextElement"
                           Text="{Binding PromptSmall, FallbackValue='hÃ nzÃ¬'}"
                           FontSize="22"
                           Opacity="0.8"
                           Foreground="Black"
                           Visibility="Visible"/>
            </StackPanel>

            <!-- Speaker button -->
            <Button Grid.Column="1"
                    Width="56" Height="48"
                    Margin="12"
                    Content="ðŸ”Š"/>
        </Grid>

        <!-- Pinyin / English answer panel -->
        <Grid Grid.Row="2" Background="White">
            <TextBlock x:Name="AnswerTextElement"
                       Text="{Binding AnswerText, FallbackValue='English Answer Here'}"
                       FontSize="24"
                       Foreground="Black"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="24"
                       Visibility="Visible"/>
        </Grid>

        <!-- Actions panel -->
        <Grid Grid.Row="3" Background="LightGray">
            <StackPanel x:Name="ActionsPanelElement"
                        Orientation="Horizontal"
                        Spacing="18"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Visible">
                <Button Width="120" Height="60" Content="Pass"/>
                <Button Width="120" Height="60" Content="Fail"/>
            </StackPanel>
        </Grid>

        <!-- Reveal button -->
        <Grid Grid.Row="4" Background="LightBlue">
            <Button x:Name="ShowButtonElement"
                    Width="220" Height="70"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Reveal"
                    Visibility="Visible"/>
        </Grid>
    </Grid>
</Page>
