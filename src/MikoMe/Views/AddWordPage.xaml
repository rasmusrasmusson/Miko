<Page
    x:Class="MikoMe.Views.AddWordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#F7F3EE">
    <!-- same gray as Translate page -->
    <Page.KeyboardAccelerators>
        <KeyboardAccelerator Key="V" Modifiers="Control" Invoked="PasteKbd_Invoked"/>
        <KeyboardAccelerator Key="Enter" Modifiers="Control" Invoked="SaveKbd_Invoked"/>
    </Page.KeyboardAccelerators>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Form -->
            <RowDefinition Height="Auto"/>
            <!-- Status -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FAEAD1" Padding="16">
            <TextBlock Text="Add New Vocabulary"
                       FontWeight="Bold"
                       FontSize="22"
                       Foreground="Black"/>
        </Border>

        <!-- Form -->
        <StackPanel Grid.Row="1" Padding="32" Spacing="18">

            <!-- Paste Button above Hanzi field -->
            <Button x:Name="PasteButton"
                    Width="36" Height="36"
                    HorizontalAlignment="Left"
                    Padding="4"
                    Click="PasteButton_Click">
                <FontIcon Glyph="&#xE77F;" FontSize="18"/>
            </Button>

            <!-- Hanzi -->
            <TextBox x:Name="HanziTextBox"
                     PlaceholderText="Hanzi"
                     FontSize="20"
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>

            <!-- Pinyin -->
            <TextBox x:Name="PinyinTextBox"
                     PlaceholderText="Pinyin"
                     FontSize="20"
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     />

            <!-- English -->
            <TextBox x:Name="EnglishTextBox"
                     PlaceholderText="English"
                     FontSize="20"
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"                     />

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        Spacing="12"
                        HorizontalAlignment="Left">
                <!-- Clear -->
                <Button x:Name="ClearButton"
                        Width="60" Height="40"
                        Padding="4"
                        Click="ClearButton_Click">
                    <FontIcon Glyph="&#xE894;" FontSize="20"/>
                    <!-- X/clear icon -->
                </Button>

                <!-- Save -->
                <Button x:Name="SaveButton"
                        Width="60" Height="40"
                        Padding="4"
                        Click="Save_Click">
                    <FontIcon Glyph="&#xE74E;" FontSize="20"/>
                    <!-- Save icon -->
                </Button>
            </StackPanel>
        </StackPanel>

        <!-- Status -->
        <TextBlock x:Name="StatusText"
                   Grid.Row="2"
                   Margin="16"
                   FontSize="14"
                   Foreground="Green"/>
    </Grid>
</Page>
