<Application
    x:Class="HuaCards.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">

    <Application.Resources>
        <ResourceDictionary>

            <!-- WinUI default resources -->
            <ResourceDictionary.MergedDictionaries>
                <controls:XamlControlsResources/>
            </ResourceDictionary.MergedDictionaries>

            <!-- ========== Fonts ========== -->
            <FontFamily x:Key="HanziFont">Microsoft YaHei UI</FontFamily>
            <FontFamily x:Key="MikoFont">
                Segoe UI Variable, Segoe UI, Noto Sans CJK SC, Microsoft YaHei UI
            </FontFamily>

            <!-- ========== Brushes used across the app ========== -->
            <!-- Left nav colors (used by MainWindow ApplyNavStyling) -->
            <SolidColorBrush x:Key="MikoNavPaneBrush" Color="#000000"/>
            <SolidColorBrush x:Key="MikoNavForegroundBrush" Color="#FFFFFF"/>

            <!-- Text and progress ring on light backgrounds -->
            <SolidColorBrush x:Key="MikoTextOnLight" Color="#111111"/>
            <SolidColorBrush x:Key="MikoRingStroke" Color="#111111"/>

            <!-- Optional accent (orange) for regular buttons -->
            <SolidColorBrush x:Key="MikoPrimaryBrush" Color="#FF7B1A"/>

            <Style x:Key="MikoAccentButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource MikoPrimaryBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="10,6"/>
                <Setter Property="CornerRadius" Value="8"/>
            </Style>

            <!-- ========== Icon-only Button (single outer border) ========== -->
            <!-- Use on speaker / show / pass / fail buttons; color per instance
                 via Foreground + BorderBrush on the Button. -->
            <Style x:Key="MikoIconButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#666"/>
                <Setter Property="BorderBrush" Value="#BBBBBB"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="{TemplateBinding CornerRadius}"/>
                                <!-- No extra border around the icon -->
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Foreground="{TemplateBinding Foreground}"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Keep NavigationViewItem text/icons white (safe in WinUI 3) -->
            <Style TargetType="controls:NavigationViewItem">
                <Setter Property="Foreground" Value="{StaticResource MikoNavForegroundBrush}"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>

