<Page
    x:Class="HuaCards.Views.TranslatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.KeyboardAccelerators>
        <KeyboardAccelerator x:ConnectionId='2' Key="V" Modifiers="Control"                           />
        <KeyboardAccelerator x:ConnectionId='3' Key="Enter"                               />
        <KeyboardAccelerator x:ConnectionId='4' Key="S" Modifiers="Menu"                          />
        <!-- Alt+S -->
    </Page.KeyboardAccelerators>

    <Page.Resources>
        <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#FFF2E1"/>
        <Style x:Key="HeaderTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="BoxHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Page header -->
        <Border Grid.Row="0" Background="{StaticResource HeaderBackgroundBrush}">
            <TextBlock Style="{StaticResource HeaderTitleStyle}" Text="Translation"/>
        </Border>

        <!-- Row with headers and Swap in the middle -->
        <Grid Grid.Row="1" Margin="16,12,16,8" MaxWidth="1200" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="56"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Left">
                <Button x:ConnectionId='14' x:Name="PasteButton"                           MinWidth="120" MinHeight="36"
                        ToolTipService.ToolTip="Paste from clipboard (Ctrl+V)">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Paste"/>
                        <TextBlock Text="Paste"/>
                    </StackPanel>
                </Button>
                <TextBlock x:ConnectionId='15' x:Name="InputHeader" Text="Chinese" Margin="16,6,0,0" Style="{StaticResource BoxHeaderStyle}"/>
            </StackPanel>

            <Button x:ConnectionId='12' Grid.Column="1" x:Name="SwapButton"                         
                    MinWidth="44" MinHeight="44" HorizontalAlignment="Center" VerticalAlignment="Center"
                    ToolTipService.ToolTip="Swap languages (Alt+S)">
                <!-- Two opposing arrows -->
                <TextBlock Text="⇄" FontSize="20"/>
            </Button>

            <TextBlock x:ConnectionId='13' Grid.Column="2" x:Name="OutputHeader" Text="English" 
                       Style="{StaticResource BoxHeaderStyle}" Margin="0,6,0,0"/>
        </Grid>

        <!-- Row with the two editors (aligned) -->
        <Grid Grid.Row="2" Margin="16,0,16,0" MaxWidth="1200" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="56"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Input -->
            <TextBox x:ConnectionId='7' x:Name="InputText" Grid.Column="0" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="260"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>

            <!-- Output -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Chinese target shows two boxes (Hanzi + Pinyin). English target shows one. -->
                <StackPanel x:ConnectionId='8' x:Name="ZhTargetPanel" Spacing="8" Visibility="Collapsed">
                    <TextBox x:ConnectionId='10' x:Name="OutputHanzi" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="120"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                    <TextBox x:ConnectionId='11' x:Name="OutputPinyin" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="120"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

                <TextBox x:ConnectionId='9' x:Name="OutputEnglish" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="260"
                         ScrollViewer.VerticalScrollBarVisibility="Auto" Visibility="Visible"/>
            </Grid>
        </Grid>

        <!-- Translate button -->
        <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="0,12,0,16">
            <Button x:ConnectionId='5' x:Name="TranslateButton" Content="Translate"                               MinWidth="160" MinHeight="40"/>
            <TextBlock x:ConnectionId='6' x:Name="StatusText" Margin="0,8,0,0" Foreground="#666" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>

