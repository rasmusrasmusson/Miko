<Page
    x:Class="HuaCards.Views.AddWordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- Keyboard shortcuts for this page -->
    <Page.KeyboardAccelerators>
        <KeyboardAccelerator x:ConnectionId='2' Key="V" Modifiers="Control"                           />
        <KeyboardAccelerator x:ConnectionId='3' Key="Enter" Modifiers="Control"                          />
    </Page.KeyboardAccelerators>

    <Page.Resources>
        <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#FFF2E1"/>
        <Style x:Key="HeaderTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource HeaderBackgroundBrush}">
            <TextBlock Style="{StaticResource HeaderTitleStyle}" Text="Add word or sentence"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel MaxWidth="820" HorizontalAlignment="Center" Spacing="12" Padding="16,20">
                <Button x:ConnectionId='4' x:Name="PasteButton"                           MinWidth="140" MinHeight="40"
                        ToolTipService.ToolTip="Paste from clipboard (Ctrl+V)" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Paste"/>
                        <TextBlock Text="Paste"/>
                    </StackPanel>
                </Button>

                <TextBox x:ConnectionId='5' x:Name="HanziTextBox" Header="Chinese characters" PlaceholderText=""
                         TextWrapping="Wrap" AcceptsReturn="True" MinHeight="48"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                <TextBox x:ConnectionId='6' x:Name="PinyinTextBox" Header="Pinyin"
                         TextWrapping="Wrap" AcceptsReturn="True" MinHeight="48"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                <TextBox x:ConnectionId='7' x:Name="EnglishTextBox" Header="English"
                         TextWrapping="Wrap" AcceptsReturn="True" MinHeight="48"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12" Margin="0,8,0,0">
                    <Button x:ConnectionId='8' x:Name="SaveButton" Content="Add" MinWidth="140" MinHeight="40"                   />
                    <TextBlock x:ConnectionId='9' x:Name="StatusText" VerticalAlignment="Center" Foreground="#666"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

