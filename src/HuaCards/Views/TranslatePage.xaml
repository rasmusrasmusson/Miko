<Page
    x:Class="HuaCards.Views.TranslatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Page.KeyboardAccelerators>
        <KeyboardAccelerator Key="V" Modifiers="Control" Invoked="PasteKbd_Invoked"/>
        <KeyboardAccelerator Key="Enter" Modifiers="Control" Invoked="TranslateKbd_Invoked"/>
        <KeyboardAccelerator Key="S" Modifiers="Control" Invoked="SwapKbd_Invoked"/>
    </Page.KeyboardAccelerators>

    <Grid RowDefinitions="Auto,*" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!-- Header -->
        <Border Background="#F7E7CE" Grid.Row="0" Padding="24,14">
            <TextBlock Text="Translation" FontSize="22" FontWeight="SemiBold" Foreground="Black"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <!-- Two rows / three columns. Row 0: headers, paste, swap. Row 1: text boxes. -->
            <Grid Margin="24,20" MaxWidth="1100"
                  RowDefinitions="Auto,*"
                  ColumnDefinitions="*,Auto,*">

                <!-- Left header + Paste -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <TextBlock x:Name="InputHeader" Text="Chinese" FontWeight="SemiBold"/>
                    <Button x:Name="PasteButton" Click="PasteButton_Click" ToolTipService.ToolTip="Paste (Ctrl+V)" MinWidth="80" Height="32" Margin="12,0,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE77F;"/>
                            <TextBlock Text="Paste"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Swap button -->
                <Button Grid.Row="0" Grid.Column="1" x:Name="SwapButton" Click="SwapButton_Click" ToolTipService.ToolTip="Swap languages (Ctrl+S)"
                        Width="44" Height="44" Margin="16,0" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE8AB;"/>
                    <!-- opposing arrows -->
                </Button>

                <!-- Right header -->
                <TextBlock Grid.Row="0" Grid.Column="2" x:Name="OutputHeader" Text="English" FontWeight="SemiBold"
                           HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <!-- INPUT -->
                <TextBox Grid.Row="1" Grid.Column="0" x:Name="InputText"
                         TextWrapping="Wrap" AcceptsReturn="True"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         MinHeight="260" HorizontalAlignment="Stretch"/>

                <!-- OUTPUT area with a small 2-col grid so buttons can sit right of the text -->
                <Grid Grid.Row="1" Grid.Column="2" ColumnDefinitions="*,Auto">

                    <!-- EN output -->
                    <TextBox x:Name="OutputEnglish"
                             Grid.Column="0"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             MinHeight="260" HorizontalAlignment="Stretch"
                             IsReadOnly="True" Background="#FFF7F7F7"/>

                    <!-- ZH output (two boxes stacked) -->
                    <StackPanel x:Name="ZhTargetPanel" Grid.Column="0" Spacing="8" Visibility="Collapsed">
                        <TextBox x:Name="OutputHanzi" PlaceholderText="Hanzi" IsReadOnly="True"
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 MinHeight="120" Background="#FFF7F7F7"/>
                        <TextBox x:Name="OutputPinyin" PlaceholderText="Pinyin" IsReadOnly="True"
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 MinHeight="120" Background="#FFF7F7F7"/>
                    </StackPanel>

                    <!-- buttons to the right of output -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Top" Spacing="8">
                        <Button x:Name="SpeakButton" ToolTipService.ToolTip="Speak" Width="44" Height="44">
                            <FontIcon Glyph="&#xE720;"/>
                        </Button>
                        <Button x:Name="CopyButton" ToolTipService.ToolTip="Copy" Width="44" Height="44">
                            <FontIcon Glyph="&#xE8C8;"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Translate button + status -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Vertical" Spacing="8" Margin="0,16,0,0"
                            HorizontalAlignment="Center">
                    <Button x:Name="TranslateButton" Content="Translate" Width="160" Height="44" Click="TranslateButton_Click"/>
                    <TextBlock x:Name="StatusText" Foreground="#995C00" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
