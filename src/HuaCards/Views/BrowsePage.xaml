<Page
    x:Class="HuaCards.Views.BrowsePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#FFF2E1"/>
        <Style x:Key="HeaderTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid RowDefinitions="Auto,*">
        <Border Background="#F7E7CE" Grid.Row="0" Padding="24,14">
            <TextBlock Text="Your vocabulary" FontSize="22" FontWeight="SemiBold" Foreground="Black"/>
        </Border>

        <Grid Grid.Row="1">
            <ListView x:Name="WordsList" Margin="24">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:Word">
                        <StackPanel>
                            <TextBlock Text="{x:Bind Hanzi}" FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock Text="{x:Bind Pinyin}" Foreground="#555"/>
                            <TextBlock Text="{x:Bind English}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBlock x:Name="EmptyText" Text="Vocabulary list will appear here."
                   HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7"/>
        </Grid>
    </Grid>

</Page>
