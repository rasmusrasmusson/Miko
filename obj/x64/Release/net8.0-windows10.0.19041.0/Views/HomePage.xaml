<Page
    x:Class="MikoMe.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:MikoMe.ViewModels">

    <Page.DataContext>
        <vm:HomeViewModel/>
    </Page.DataContext>

    <!-- Simple centered vertical layout -->
    <Grid Background="{ThemeResource SystemControlAcrylicWindowBrush}">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="16">

            <!-- Optional app logo (safe if the file is missing) -->
            <Image Source="ms-appx:///Assets/MikoMe_Teacher.png"
                   Width="320"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,24"/>

            <!-- CN -> ENG -->
            <Button x:ConnectionId='2'                        
                    Width="420" Height="72">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="12">
                    <!-- Play icon (FontIcon supports FontSize) -->
                    <FontIcon FontFamily="Segoe MDL2 Assets"
                              Glyph="&#xE768;" FontSize="28"/>
                    <TextBlock Text="CN → ENG" FontSize="20"/>
                </StackPanel>
            </Button>

            <!-- ENG -> CN -->
            <Button x:ConnectionId='3'                        
                    Width="420" Height="72">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="12">
                    <FontIcon FontFamily="Segoe MDL2 Assets"
                              Glyph="&#xE768;" FontSize="28"/>
                    <TextBlock Text="ENG → CN" FontSize="20"/>
                </StackPanel>
            </Button>

            <!-- Add vocabulary -->
            <Button x:ConnectionId='4'                  
                    Width="420" Height="72">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="12">
                    <FontIcon FontFamily="Segoe MDL2 Assets"
                              Glyph="&#xE710;" FontSize="28"/>
                    <TextBlock Text="Add vocabulary" FontSize="20"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>

